@model BusPortal.Web.Models.DTO.AddBookingViewModel

@{
    ViewData["Title"] = "Create Booking";
}

<div class="container mt-5">
    <h2>Create New Booking</h2>
    <form asp-action="Add" method="post">
        <div class="form-group mb-3">
            <label asp-for="StartCity">Start City</label>
            <select asp-for="StartCity" 
                    class="form-control" 
                    asp-items="ViewBag.StartCities"
                    id="startCitySelect">
                <option value="">Select Start City</option>
            </select>
            <span asp-validation-for="StartCity" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DestinationCity">Destination City</label>
            <select asp-for="DestinationCity" 
                    class="form-control" 
                    id="destinationCitySelect" 
                    disabled>
                <option value="">Select Destination City</option>
            </select>
            <span asp-validation-for="DestinationCity" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Seat">Seat Number</label>
            <input asp-for="Seat" class="form-control" />
            <span asp-validation-for="Seat" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create Booking</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('#startCitySelect').change(function () {
                var startCity = $(this).val();
                var destinationSelect = $('#destinationCitySelect');
                
                destinationSelect.empty();
                destinationSelect.append($('<option></option>').val('').text('Select Destination City'));
                
                if (startCity) {
                    $.getJSON('/Bookings/GetDestinationCities', { startCity: startCity }, function (cities) {
                        $.each(cities, function (i, city) {
                            destinationSelect.append($('<option></option>').val(city).text(city));
                        });
                        destinationSelect.prop('disabled', false);
                    });
                } else {
                    destinationSelect.prop('disabled', true);
                }
            });
        });
    </script>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}
