@{
    ViewData["Title"] = "Home Page";
}
<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-md-6 text-center text-md-start">
            <h1 class="display-4 fw-bold text-primary">Welcome to the Bus Reservation Portal</h1>
            <p class="lead text-muted">Book your tickets easily and travel comfortably with our trusted services. Fast, reliable, and convenient.</p>
            <div class="mt-4">
                <a class="btn btn-primary btn-lg me-3" asp-action="Login" asp-controller="Clients">
                    Login
                </a>
                <a class="btn btn-outline-primary btn-lg" asp-action="Register" asp-controller="Clients">
                    Sign Up
                </a>
            </div>
        </div>
        <div class="col-md-6 text-center">
            <img src="https://www.datocms-assets.com/46688/1719931282-bus-allgo-en.webp?auto=format" alt="Bus Reservation" class="img-fluid rounded shadow">
        </div>
    </div>

    <div class="mt-5">
        <h2 class="text-center text-primary mb-4">Why Choose Us?</h2>
        <div class="row">
            <div class="col-md-4 text-center">
                <div class="p-4 shadow rounded">
                    <i class="bi bi-clock text-primary" style="font-size: 2rem;"></i>
                    <h5 class="mt-3">Fast Booking</h5>
                    <p class="text-muted">Reserve your seat within minutes using our seamless booking platform.</p>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="p-4 shadow rounded">
                    <i class="bi bi-shield-check text-primary" style="font-size: 2rem;"></i>
                    <h5 class="mt-3">Secure Payments</h5>
                    <p class="text-muted">Your payment details are encrypted and secure with us.</p>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="p-4 shadow rounded">
                    <i class="bi bi-geo-alt text-primary" style="font-size: 2rem;"></i>
                    <h5 class="mt-3">Extensive Routes</h5>
                    <p class="text-muted">We cover a wide range of destinations to suit your travel needs.</p>
                </div>
            </div>
