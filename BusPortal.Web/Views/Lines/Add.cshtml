}

@model BusPortal.Web.Models.DTO.AddLineViewModel

<h1>Add Lines</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Start City</label>
        <input type="text" class="form-control" asp-for="StartCity" />
    </div>

    <div class="mt-3">
        <label class="form-label">Destination City</label>
        <input type="text" class="form-control" asp-for="DestinationCity" />
    </div>

    <div class="mt-3">
        <label class="form-label">Departure Times</label>
        <input type="text" class="form-control" asp-for="DepartureTimes" />
    </div>

    <div class="mt-3">
        <label class="form-label">Price</label>
        <input type="number" class="form-control" asp-for="Price" min="0" />
    </div>
    <!-- <div class="mt-3">
         <label class="form-label">Date</label>
         <input type="date" class="form-control" asp-for="Date" /> 
     </div>-->
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
