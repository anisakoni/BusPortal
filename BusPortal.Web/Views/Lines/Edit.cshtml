@{
}

@model BusPortal.Web.Models.Entities.Line

<h1> Edit Student</h1>

@if (Model is null)
{
    <p>No line was found with this Id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Start City</label>
            <input type="text" class="form-control" asp-for="StartCity" />
        </div>

        <div class="mt-3">
            <label class="form-label">Destination City</label>
            <input type="text" class="form-control" asp-for="DestinationCity" />
        </div>

        <div class="mt-3">
            <label class="form-label">Departure Times</label>
            <input type="text" class="form-control" asp-for="DepartureTimes" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3"
            asp-action="Delete"
            asp-controller="Lines">Delete</button>
        </div>
    </form>
}