@{
    ViewData["Title"] = "Edit Line";
}

@model BusPortal.Web.Models.Entities.Line

<h1>Edit Line</h1>

@if (Model == null)
{
    <p class="text-danger">No line was found with this ID.</p>
    <a href="@Url.Action("Index", "Lines")" class="btn btn-primary">Back to List</a>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Start City</label>
            <input type="text" class="form-control" asp-for="StartCity" required />
        </div>

        <div class="mt-3">
            <label class="form-label">Destination City</label>
            <input type="text" class="form-control" asp-for="DestinationCity" required />
        </div>

        <div class="mt-3">
            <label class="form-label">Departure Times</label>
            <input type="text" class="form-control" asp-for="DepartureTimes" required />
        </div>

        <div class="mt-3">
            <label class="form-label">Price</label>
            <input type="number" class="form-control" asp-for="Price" min="0" required />
        </div>
        <!--
        <div class="mt-3">
                   <label class="form-label">Date</label>
                   <input type="date" class="form-control" asp-for="Date" required /> 
        </div>
    -->

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="@Url.Action("Delete", "Lines", new { id = Model.Id })" class="btn btn-danger ms-3">Delete</a>
        </div>
    </form>
}
